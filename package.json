{
  "name": "react-native-reanimated-toast",
  "version": "1.1.0",
  "description": "A performant toast with fully configurable options ðŸš€",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "files": [
    "src",
    "lib"
  ],
  "keywords": [
    "react-native",
    "ios",
    "android",
    "reanimated",
    "toast",
    "snackbar",
    "alert",
    "message",
    "banner",
    "dialog"
  ],
  "repository": "https://github.com/rrebase/react-native-reanimated-toast",
  "author": "Ragnar Rebase",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rrebase/react-native-reanimated-toast/issues"
  },
  "homepage": "https://github.com/rrebase/react-native-reanimated-toast#readme",
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "build": "bob build && yarn copy-dts",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" lib/typescript",
    "example": "yarn --cwd example",
    "setup": "yarn install && yarn example",
    "release": "release-it --npm.skipChecks"
  },
  "dependencies": {
    "react-native-svg": "^12.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/bob": "^0.16.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/react": "^17.0.0",
    "@types/react-native": "0.63.37",
    "auto-changelog": "^2.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.5",
    "prettier": "^2.2.1",
    "react": "~17.0.1",
    "react-native": "^0.63.4",
    "react-native-gesture-handler": "~1.7.0",
    "react-native-reanimated": "2.0.0-alpha.7",
    "release-it": "^14.2.2",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=1.7.0",
    "react-native-reanimated": ">=2.0.0-alpha.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
